{
 "compilerOptions": {
  "target": "ES6",
  "module": "CommonJS",
  "typeRoots": ["src/@types", "node_modules/@types"],
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "exactOptionalPropertyTypes": true,
  "skipLibCheck": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true
 },
 "include": ["src"],
 "exclude": ["node_modules"]
}